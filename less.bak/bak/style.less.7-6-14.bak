@media(min-width: 768px) {

    .navbar .container-inner {
        height: 45px !important;
    }

    .nav > li > .nav-dropdown {
        .sv-transition(height, background);
        position: absolute; left: 0; top: 40px;
        max-height: 0;
        width: 0;
        background: none;
        overflow: hidden;
        padding: 6px;

        // -webkit-transition: height, background .6s @tf;
        // -moz-transition: height, background .6s @tf;
        // -ms-transition: height, background .6s @tf;
        // -o-transition: height, background .6s @tf;
        // transition: height, background .6s @tf;

        a.dropdown-post-link {
            .sv-transition(color, background, border);
            .text-overflow();
            position: relative;
            display: block;
            width: 100%;
            color: transparent;
            padding: 15px 52px 15px 15px;
            // border: 2px solid transparent;
            font-size: 22px;
            font-weight: bold;
            line-height: 1em;
            text-transform: uppercase;
            // height: 42px;

            &:after {
                content: '';
                position: absolute;
                z-index: -1;
                -webkit-transition: all .35s @tf;
                -moz-transition: all .35s @tf;
                transition: all .35s @tf;

                width: 100%;
                height: 0;
                top: 50%;
                left: 50%;
                background: @light;
                opacity: 0;
                -webkit-transform: translateX(-50%) translateY(-50%) rotate(45deg);
                -moz-transform: translateX(-50%) translateY(-50%) rotate(45deg);
                -ms-transform: translateX(-50%) translateY(-50%) rotate(45deg);
                transform: translateX(-50%) translateY(-50%) rotate(45deg);
            }

            i {
                position: absolute;
                right: -31px;
                top: 0;
                font-size: 52px;
                line-height: 46px;
                -webkit-transition: all 0.43s @tf 0.3s;
                -moz-transition: all 0.43s @tf 0.3s;
                transition: all 0.43s @tf 0.3s;
            }
            
            &:hover i {
                right: 16px;
            }
        }

        &#recent-dropdown a.dropdown-post-link:after {
            background: @dark;
        }

    }

    .nav > li:hover > .nav-dropdown {
        .box-shadow(5px 5px 20px -10px @dark);
        min-height: 220px;
        z-index: 11000;

        &#recent-dropdown {
            background: @light;
        }
        &#music-dropdown {
            background: @music-color;
        }
        &#features-dropdown {
            background: @ft-color;
        }
        &#events-dropdown {
            background: @events-color;
        }

        a.dropdown-post-link {
            color: @light;
            &:hover {
                // background: @light;
                border-color: @light;
                color: @light;
            }

            &:hover:after {
                height: 982%;
                opacity: 1;
            }

            &:active:after {
                height: 893%;
                opacity: 1;
            }
        }

        &#recent-dropdown {
            a.dropdown-post-link {
                color: @dark;
                // background: @light;
                &:hover {
                    // background: @dark;
                    border-color: @dark;
                    color: @light;
                }
                i {
                    color: @light;
                }
            }
        }
        &#music-dropdown {
            a.dropdown-post-link {
                // background: @music-color;
                &:hover, i {
                    color: @music-color;
                }
            }
        }
        &#features-dropdown {
            a.dropdown-post-link {
                // background: @ft-color;
                &:hover, i {
                    color: @ft-color;
                }
            }
        }
        &#events-dropdown {
            a.dropdown-post-link {
                // background: @events-color;
                &:hover, i {
                    color: @events-color;
                }
            }
        }
        
    }

}
































