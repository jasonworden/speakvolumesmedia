      opacity: 1;
      filter: alpha(opacity=100);
    }

    .tooltip-inner {

        color: @dark;
        padding: 5px 8px;

        background: @light; /* Old browsers */
        background: -moz-linear-gradient(top,  @light-opaque 0%, @light 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(24,24,36,.67)), color-stop(100%,@light)); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top,  @light-opaque 0%,@light 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top,  @light-opaque 0%,@light 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(top,  @light-opaque 0%,@light 100%); /* IE10+ */
        background: linear-gradient(to bottom,  @light-opaque 0%,@light 100%); /* W3C */
        // filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#181824', endColorstr='#181824',GradientType=0 ); /* IE6-9 */
    }

    &.bottom .tooltip-arrow {
      border-bottom-color: @light-opaque;
    }

    &.top .tooltip-arrow {
      border-top-color: @light-opaque;
      border-top-color: @light-opaque;
    }

