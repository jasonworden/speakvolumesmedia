nav#other-posts {
    .clearfix();
    border: 6px solid @dark;
    margin-bottom: 12px;

    a.other-post {
        .clearfix();
        display: block;

        &:hover {
            .details {
                background: @main-color;
                .details-inner {
                    color: @light;
                }
            }
        }

        .square {
            width: 50%;
            float: left;
        }

        .details {
            position: relative;
            
            .details-inner {
                color: @dark;
                padding: 16px;
                width: 100%;
                position: absolute;
                top: 50%;
                margin-top: -50px;
            }
        }

        &.next {
            text-align: right;
            border-bottom: 6px solid @dark;

            .details-inner {
                right: 0;
            }

            .details::before {
                content: "";
                width: 0;
                height: 0;
                border-style: solid;
                border-width: 32px 0 32px 28px;
                border-color: transparent transparent transparent white;
                position: absolute;
                right: -28px;
                top: 50%;
                margin-top: -32px;
            }

            &:hover .details::before {
                border-left-color: @main-color;
            }
        }

        &.prev {
            .details {
                float: right;
            }

            .details-inner {
                left: 0;
            }

            .details::before {
                content: "";
                width: 0;
                height: 0;
                border-style: solid;
                border-width: 32px 28px 32px 0;
                border-color: transparent white transparent transparent;
                position: absolute;
                left: -28px;
                top: 50%;
                margin-top: -32px;
            }

            &:hover .details::before {
                border-right-color: @main-color;
            }
        }

        span.direction {
            display: block;
            // text-transform: lowercase;
            font-size: 30px;
            padding: 0 0 16px 0;
            line-height: 1em;
        }

        span.title {
            font-size: 19px;
            line-height: 1em;
        }
    }
}


