// DISTRIBUTION IMPORTS
@import "less/dist/bootstrap/bootstrap.less";

// // // // COLOR VARIABLES // // // //

@light: rgba(250,250,250,1);
@dark: rgba(24,24,36,1);
@dark-opaque: rgba(24,24,36,.9);

@turqoise: rgba(0, 227, 195,1); 
@purple: rgba(80,57,252,1);
@pink: rgba(220, 11, 110,1);
@coral: rgba(255,103,101,1); //rgba(255,105,96,1);
@yellow: rgba(255,193,50,1); //rgba(255,233,78,1);
@blue: rgba(73,170,255,1); // rgba(50,147,250,1);
@green: rgba(25,172,106,1);

@music-color: @turqoise;
@intv-color: @purple;
@mix-color: @coral;
@ft-color: @blue;
@events-color: @pink;
@news-color: @yellow;
@other-color: @green;

@main-color: @music-color;

// // // // Regulated pixel counts // // // // usage: unit(@spacing, px);
@spacing: 24;
@half-spacing: @spacing / 2;
@container-stretch: @spacing + @half-spacing;
@extra-main-spacing: @half-spacing;

// // // // TRANSITION STUFF // // // //

@t: .2s;
@tf: ease-out;
@t-slow: .5s;

.sv-transition (@property1,@property2:X,...) {
    /// use semicolon at end if multiple args are given

    @properties: ~`"@{arguments}".replace(/[\[\]]|\,\sX/g, '')`;

    -webkit-transition: @properties @t @tf;
    -moz-transition: @properties @t @tf;
    -ms-transition: @properties @t @tf;
    -o-transition: @properties @t @tf;
    transition: @properties @t @tf;
}

.home-section(@color) {
    .section-header {
        border-color: @color;
    }
    .section-inner {
        .prominent-post-link:hover {
            background: @color;
            border-color: @color;
        }
        a.more-link:hover {
            background: @color;
        }
        .small-post-link:hover {
            background: @color;
        }
    }
}

.placeholder-color(@color) {
    &::-webkit-input-placeholder {
        color: @color;
    }
    &:-moz-placeholder {
        color: @color;
    }
    &::-moz-placeholder {
        color: @color;
    }
    &:-ms-input-placeholder {
        color: @color;
    }
}

